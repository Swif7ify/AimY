{
	"name": "aimy",
	"displayName": "AimY - Aim Trainer",
	"description": "Stop Coding, Start Shooting",
	"version": "0.0.10",
	"engines": {
		"vscode": "^1.103.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "aimy.startGame",
				"title": "AimY: Start Game"
			}
		],
		"configuration": {
			"title": "AimY - Settings",
			"properties": {
				"aimy.enableExtension": {
					"type": "boolean",
					"default": true,
					"description": "Enable/disable the AimY extension auto-start behavior."
				},
				"aimy.idleTimer": {
					"type": "number",
					"default": 60000,
					"minimum": 1000,
					"maximum": 3600000,
					"description": "Idle delay in milliseconds before the game auto-starts."
				},
				"aimy.targetGoals": {
					"type": "number",
					"default": 5,
					"minimum": 1,
					"maximum": 1000,
					"description": "Number of targets to hit to complete the game."
				},
				"aimy.targetMove": {
					"type": "boolean",
					"default": false,
					"description": "Enable moving targets."
				},
				"aimy.targetSpeed": {
					"type": "number",
					"default": 3000,
					"minimum": 100,
					"maximum": 60000,
					"description": "Target movement speed (ms per move)."
				},
				"aimy.targetSize": {
					"type": "number",
					"default": 100,
					"minimum": 10,
					"maximum": 1000,
					"description": "Target diameter in pixels."
				},
				"aimy.targetTimeExists": {
					"type": "number",
					"default": 3000,
					"minimum": 0,
					"maximum": 60000,
					"description": "How long (ms) a target exists before counting as a miss. Set 0 to disable."
				},
				"aimy.statsFormat": {
					"type": "string",
					"enum": [
						"json",
						"csv"
					],
					"default": "json",
					"description": "Format to save stats: 'json' = one file per run, 'csv' = append rows to aimy-stats.csv."
				},
				"aimy.statsDirectory": {
					"type": "string",
					"default": "",
					"description": "Directory where AimY saves stats JSON files. Leave empty to use the extension storage folder."
				},
				"aimy.enableSoundEffects": {
					"type": "boolean",
					"default": true,
					"description": "Enable/disable hit/miss sound effects in the game."
				},
				"aimy.soundVolume": {
					"type": "number",
					"default": 80,
					"minimum": 0,
					"maximum": 100,
					"description": "Volume for sound effects (0-100)."
				},
				"aimy.enableStatsSave": {
					"type": "boolean",
					"default": true,
					"description": "Enable/disable saving game stats to files."
				},
				"aimy.enableEffects": {
					"type": "boolean",
					"default": true,
					"description": "Enable visual effects like particles and hit/miss animations."
				},
				"aimy.closeWorkspaceOnGameStart": {
					"type": "boolean",
					"default": true,
					"description": "Close all open editors when the game starts and restore them after completion."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.103.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "22.x",
		"@typescript-eslint/eslint-plugin": "^8.39.0",
		"@typescript-eslint/parser": "^8.39.0",
		"eslint": "^9.32.0",
		"typescript": "^5.9.2",
		"@vscode/test-cli": "^0.0.11",
		"@vscode/test-electron": "^2.5.2"
	},
	"publisher": "EarlRomeoOrdovez",
	"repository": {
		"type": "git",
		"url": "https://github.com/Swif7ify/AimY"
	},
	"bugs": {
		"url": "https://github.com/Swif7ify/AimY/issues"
	},
	"license": "MIT",
	"icon": "public/icon.png"
}
